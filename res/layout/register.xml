<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/home_backgroud"
        >
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent"
            >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:background="@drawable/navigation_bar_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_weight="0"
                    >
                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/back_button"
                             android:background="@android:color/transparent"
                        />
                <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="新用户注册"
                        android:textSize="18dp"
                        android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/more_email_icon"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                           android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_gravity="center_vertical"
                        android:text="邮箱："
                        android:gravity="left"
                        android:textSize="25px"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />


                <EditText
                        android:id="@+id/accountText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入Email地址"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"

                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/star_icon"
                           android:layout_gravity="center_vertical"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="昵称："
                        android:textColor="#000000"
                        android:gravity="left"
                        android:textSize="25px"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        />


                <EditText
                        android:id="@+id/nameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输昵称"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/edit_icon"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                           android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="密码："
                        android:textColor="#000000"
                        android:gravity="left"
                        android:textSize="25px"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        />


                <EditText
                        android:id="@+id/passwordText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输密码"
                        android:password="true"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/edit_icon"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                           android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="重复："
                        android:textColor="#000000"
                        android:gravity="left"
                        android:textSize="25px"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        />


                <EditText
                        android:id="@+id/rePasswordText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="再输密码"
                        android:password="true"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/more_tel_icon"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                           android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="电话："
                        android:textColor="#000000"
                        android:gravity="left"
                        android:textSize="25px"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        />


                <EditText
                        android:id="@+id/tellText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输密码"
                        android:password="true"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/star_icon"
                           android:layout_gravity="center_vertical"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="性别："
                        android:textColor="#000000"
                        android:gravity="left"
                        android:textSize="25px"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        />
                <RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal">
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                 android:text="男" android:checked="true" android:textColor="#000000"/>
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                 android:text="女" android:textColor="#000000" android:layout_marginLeft="50px"/>
                </RadioGroup>

            </LinearLayout>
            <ImageButton android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:src="@drawable/register_button_2"
                         android:layout_marginTop="30px"
                    android:background="@android:color/transparent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>