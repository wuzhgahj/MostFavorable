<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/home_backgroud">
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent"
            >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:background="@drawable/navigation_bar_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_weight="0"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="更多信息"
                        android:textSize="18dp"
                        android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="20px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/more_notice_icon"
                           android:layout_gravity="center_vertical"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"

                        />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="公告列表"
                        android:gravity="left"
                        android:textSize="25px"
                        android:textColor="#d5d5d5"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />


                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="0"
                             android:src="@drawable/right_arrow"
                             android:background="@android:color/transparent"
                             android:layout_gravity="center_vertical"
                             android:layout_marginRight="20px"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/more_tel_icon"
                           android:layout_gravity="center_vertical"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                        />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="客服电话"
                        android:gravity="left"
                        android:textSize="25px"
                        android:textColor="#d5d5d5"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />


                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="0"
                             android:src="@drawable/right_arrow"
                             android:background="@android:color/transparent"
                             android:layout_gravity="center_vertical"
                             android:layout_marginRight="20px"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/more_email_icon"
                           android:layout_gravity="center_vertical"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                        />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="客服邮箱"
                        android:gravity="left"
                        android:textSize="25px"
                        android:textColor="#d5d5d5"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />


                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="0"
                             android:src="@drawable/right_arrow"
                             android:background="@android:color/transparent"
                             android:layout_gravity="center_vertical"
                             android:layout_marginRight="20px"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/more_about_us_icon"
                           android:layout_gravity="center_vertical"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                        />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="关于我们"
                        android:gravity="left"
                        android:textSize="25px"
                        android:textColor="#d5d5d5"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />


                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="0"
                             android:src="@drawable/right_arrow"
                             android:background="@android:color/transparent"
                             android:layout_gravity="center_vertical"
                             android:layout_marginRight="20px"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:layout_weight="0"
                    android:background="@drawable/bg_todo"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    >

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/more_service_icon"
                           android:layout_gravity="center_vertical"
                           android:paddingLeft="17dp"
                           android:layout_marginRight="5px"
                        />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="版本检测"
                        android:gravity="left"
                        android:textSize="25px"
                        android:textColor="#d5d5d5"
                        android:layout_alignLeft="@+id/accountText"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />


                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="0"
                             android:src="@drawable/right_arrow"
                             android:background="@android:color/transparent"
                             android:layout_gravity="center_vertical"
                             android:layout_marginRight="20px"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>