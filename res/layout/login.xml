<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/home_backgroud">
    <LinearLayout
            android:background="@drawable/navigation_bar_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="0"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的账户"
                android:textSize="18dp"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/bg_todo"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            >

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/more_email_icon"
                   android:layout_gravity="center_vertical"
                   android:paddingLeft="17dp"
                   android:layout_marginRight="5px"
                   />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="邮箱："
                android:gravity="left"
                android:textSize="25px"
                android:textColor="#000000"
                android:layout_alignLeft="@+id/accountText"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />


        <EditText
                android:id="@+id/accountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入Email地址"
                android:layout_gravity="center_vertical"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_weight="0"
                  android:background="@drawable/bg_todo"
                  android:layout_marginLeft="10px"
                  android:layout_marginRight="10px">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/star_icon"
                   android:background="@android:color/transparent"

                   android:paddingLeft="17dp"
                   android:layout_marginRight="5px"
                   android:layout_gravity="center_vertical"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="密码："
                android:textColor="#000000"
                android:gravity="left"
                android:textSize="25px"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />
        <EditText
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="输入密码"
                android:layout_gravity="center_vertical"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_marginTop="20px"
            >
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/login_button"
                     android:background="@android:color/transparent"
                     android:id="@+id/loginButton"
                     android:layout_marginRight="10px"
                />
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/register_button"
                     android:background="@android:color/transparent"
                     android:id="@+id/registerButton"
                     android:layout_marginLeft="10px"
                />

    </LinearLayout>
</LinearLayout>